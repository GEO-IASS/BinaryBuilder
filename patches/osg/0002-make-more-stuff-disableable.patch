+OPTION(ENABLE_INVENTOR "Enable INVENTOR" ON)
+OPTION(ENABLE_OPENEXR "Enable OPENEXR" ON)
+OPTION(ENABLE_COLLADA "Enable COLLADA" ON)
+OPTION(ENABLE_ZLIB "Enable ZLIB" ON)
+OPTION(ENABLE_OPENVRML "Enable OPENVRML" ON)
+OPTION(ENABLE_PERFORMER "Enable PERFORMER" ON)
+OPTION(ENABLE_GDAL "Enable GDAL" ON)
+OPTION(ENABLE_ITK "Enable ITK" ON)
+OPTION(ENABLE_LIBVNCSERVER "Enable LIBVNCSERVER" ON)
+OPTION(ENABLE_OURDCMTK "Enable OURDCMTK" ON)
+OPTION(ENABLE_GTK "Enable GTK" ON)
+OPTION(ENABLE_CAIRO "Enable CAIRO" ON)
 
 # Common to all platforms:
 IF(ENABLE_FREETYPE)
 FIND_PACKAGE(FreeType)
 ENDIF(ENABLE_FREETYPE)
+
+IF(ENABLE_INVENTOR)
 FIND_PACKAGE(Inventor)
+ENDIF(ENABLE_INVENTOR)
+
 IF(ENABLE_JPEG2K)
 FIND_PACKAGE(Jasper)
 ENDIF(ENABLE_JPEG2K)
+
+IF(ENABLE_OPENEXR)
