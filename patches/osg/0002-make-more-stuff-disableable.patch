+ENDIF(ENABLE_OPENEXR)
+IF(ENABLE_COLLADA)
 FIND_PACKAGE(COLLADA)
+ENDIF(ENABLE_COLLADA)
+IF(ENABLE_ZLIB)
 FIND_PACKAGE(ZLIB)
+ENDIF(ENABLE_ZLIB)
+
 IF(ENABLE_XINE)
 FIND_PACKAGE(Xine)
 ENDIF(ENABLE_XINE)
+
+IF(ENABLE_OPENVRML)
 FIND_PACKAGE(OpenVRML)
+ENDIF(ENABLE_OPENVRML)
+IF(ENABLE_PERFORMER)
 FIND_PACKAGE(Performer)
+ENDIF(ENABLE_PERFORMER)
+IF(ENABLE_GDAL)
 FIND_PACKAGE(GDAL)
+ENDIF(ENABLE_GDAL)
+
 IF(ENABLE_CURL)
 FIND_PACKAGE(CURL)
 ENDIF(ENABLE_CURL)
+
+IF(ENABLE_ITK)
 FIND_PACKAGE(ITK)
+ENDIF(ENABLE_ITK)
+IF(ENABLE_LIBVNCSERVER)
 FIND_PACKAGE(LibVNCServer)
+ENDIF(ENABLE_LIBVNCSERVER)
+IF(ENABLE_OURDCMTK)
 FIND_PACKAGE(OurDCMTK)
+ENDIF(ENABLE_OURDCMTK)
+
 IF(ENABLE_XUL)
 FIND_PACKAGE(XUL)
 ENDIF(ENABLE_XUL)
@@ -334,6 +374,7 @@ IF(PKG_CONFIG_FOUND)
 
     INCLUDE(FindPkgConfig)
 
+    IF(ENABLE_GTK)
     PKG_CHECK_MODULES(GTK gtk+-2.0)
 
     IF(WIN32)
@@ -342,10 +383,14 @@ IF(PKG_CONFIG_FOUND)
         PKG_CHECK_MODULES(GTKGL gtkglext-x11-1.0)
     ENDIF(WIN32)
 
+    ENDIF(ENABLE_GTK)
+
     IF(ENABLE_SVG)
     PKG_CHECK_MODULES(RSVG librsvg-2.0)
     ENDIF(ENABLE_SVG)
+    IF(ENABLE_CAIRO)
     PKG_CHECK_MODULES(CAIRO cairo)
+    ENDIF(ENABLE_CAIRO)
     IF(ENABLE_PDF)
     PKG_CHECK_MODULES(POPPLER poppler-glib)
